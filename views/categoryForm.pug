extends layout

block content 
  h1= title
  - if(category === undefined) { category = { name: '', summary: '' } };

  form(method='POST' action='')
    div.form-group
      label(for='name') Category Name:
      input#name.form-control(type='text', placeholder='Name of category', name='name', value=category.name, required='true')
    div.form-group
      label(for='summary') Category Summary: 
      input#summary.form-control(type='text', placeholder='Summary of category', name='summary', value=category.summary, required='true')
    button.btn(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg