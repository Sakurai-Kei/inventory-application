extends layout 

block content 
  h1= title
  - if(item === undefined) { item = { name: '', summary: '', price: '', stock: '' } };

  form(method='POST' action='')
    div.form-group
      label(for='name') Item Name: 
      input#name.form-control(type='text', placeholder='Name of item', name='name', value=item.name , required='true')
    div.form-group
      label(for='summary') Item Summary:
      input#summary.form-control(type='text', placeholder='Item description', name='summary', value=item.summary, required='true')
    div.form-group
      label Category:
      div 
        for category in categoryList
          div
            input.checkbox-input(type='checkbox', name='category', id=category._id, value=category._id, checked=category.checked)
            label(for=category._id) #{category.name}
    div.form-group
      label(for='price') Price:
      input#price.form-control(type='number', placeholder='Price of item', name='price', value=item.price, required='true', min='0')
    div.form-group
      label(for='stock') Quantity:
      input#stock.form-control(type='number', placeholder='Item\'s quantity', name='stock', value=item.stock, required='true', min='0')
    button.btn(type='submit') Submit

  if errors 
    ul 
      for error in errors 
        li!= error.msg 